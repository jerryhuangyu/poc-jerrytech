{
	"name": "jerrytech",
	"private": true,
	"scripts": {
		"root:install": "pnpm docusaurus:install && pnpm next:install",
		"root:build": "pnpm run docusaurus:build && pnpm run docusaurus:copy && pnpm run next:build",
		"root:serve": "cd apps/landing-profile && pnpm run start",

		"docusaurus:install": "cd apps/docusaurus-blogs && pnpm install",
		"docusaurus:build": "cd apps/docusaurus-blogs && pnpm run build",
		"docusaurus:copy": "cp -r apps/docusaurus-blogs/build apps/landing-profile/public/blogs",

		"next:install": "cd apps/landing-profile && pnpm install",
		"next:build": "cd apps/landing-profile && pnpm run build"
	}
}
